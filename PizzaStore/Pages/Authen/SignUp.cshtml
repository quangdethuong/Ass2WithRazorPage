@page
@model PizzaStore.Pages.Authen.SignUpModel
@{
    ViewData["Title"] = "SignUp";

}

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6" style="background-color: lightblue;">
        <h1 style="text-align: center; color: blue;">Register</h1>


        <form method="post">

            <div class="form-group">
                <label for="username">AccountId:</label>
                <input type="text" class="form-control" id="username" asp-for="user.AccountId" required>
            </div>
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" class="form-control" id="username" asp-for="user.UserName" required>
            </div>

            <div class="form-group">
                <label for="fullname">FullName:</label>
                <input type="text" class="form-control" id="fullname" asp-for="user.FullName" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" asp-for="user.Password" required>
            </div>
          @*  <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" class="form-control" id="confirmPassword" name="@Model.ConfirmPassword" required>
            </div>*@
            <div class="form-group">
                <label for="password">Type:</label>
                <input type="password" class="form-control" id="password" asp-for="user.Type" value="1" hidden>
            </div>
            @if (TempData["Msg"] != null)
            {
                <div class="alert alert-success">@TempData["Msg"]</div>
            }
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
